<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".taps.sebha_fragment">

<ImageView
    android:id="@+id/head_of_sebha"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:src="@drawable/head"
    android:layout_marginStart="40dp"

    />
    <ImageView
        android:id="@+id/body_of_sebha"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/head_of_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/bodyofseb7a"
        android:layout_marginTop="-30dp"

        />

<TextView
    android:id="@+id/numberof_tasbeh"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/body_of_sebha"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="عدد التسبيحات"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_marginTop="15dp"
    />
    <TextView
        android:id="@+id/counter_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/numberof_tasbeh"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:background="@drawable/shape_sebha"
        android:text="0"
        android:textSize="25sp"

        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/convertertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/counter_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="20dp"
        android:background="@drawable/shape_sebha"
        android:text="sdagbhdsfhsvgasfg"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"
        />










</androidx.constraintlayout.widget.ConstraintLayout>